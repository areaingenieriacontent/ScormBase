                        <tr>
                            <td>@prize.User.FirstName @prize.User.LastName</td>
                            <td>@prize.Exch_PointUser</td>
                            <td>@prize.Prize.Priz_Name</td>
                            <td>@prize.Prize.Priz_RequiredPoints</td>
                            <td>@prize.StateExchange</td>

