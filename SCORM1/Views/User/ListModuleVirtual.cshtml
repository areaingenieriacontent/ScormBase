<div class="panel-primary" style="background-image: url(../Content/Images/cursos/portada.jpg);height: 800px; background-repeat: no-repeat">
    @using (Html.BeginForm("SearchMVirtual", "User", FormMethod.Post, new { @class = "row", role = "search" }))
