    <div class="page-hat simple">
        <div class="page-hat--content">
            <div class="page-hat--title js-letters-effect clearfix text-formatted field field--type-text-long field--label-hidden field__items" style=" opacity: 1; margin-top: 80vh;position:relative;z-index:1; font-size:80px">
