@using SCORM1.Models.ViewModel;
@using SCORM1.Models.Lms;
@model UserArticleViewModel
@Html.Partial("_LoginPartial")
<br /><br /><br /><br /><br /><br />
<div class="row fecha">
    <div class="btn-group btn-breadcrumb">
        <a href="@Url.Action("Index", "Home")" class="btn btn-info"><i class="glyphicon glyphicon-home"></i></a>
    </div>
</div>
<br />
<div class="panel-primary">
    @using (Html.BeginForm("SearchArticle", "User", FormMethod.Post, new { @class = "row", role = "search" }))
    {
        <div class="col-md-2">
            @Html.EditorFor(model => model.SearchArticle, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del Articulo" } })
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-default">Buscar</button>
        </div>
    }
    @if (Model.articles != null)
    {
        <br />
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="success">
                        <th><center>Nombre del Articulo</center></th>
                        <th>Edición</th>
                        <th>Estado edición</th>
                        <th>Portada</th>
                        <th>Ver</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.articles)
                {
                        <tr>
                            <td>@item.Arti_Name</td>
                            <td>@item.Section.Edition.Edit_Name</td>
                            <td>@item.Section.Edition.Edit_StateEdition</td>

                            <td>
                                <img src="~/Resources/SourceSection/@item.Arti_imagen" style="width:50px; height:50px" />
                            </td>
                            <td>
                                <a href='@Url.Action("ViewArticle","User", new { id = @item.Arti_Id })'>
                                    <img src='~/Content/Images/Ver_1.png' style="width:60px;height:15%;" class="img img-responsive" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <br /><br /><br /><br /><br />
        <div class="row">
            <center> <img src="~/Content/Images/no-articulos-v.png" style="width:600px;" alt="Imagen responsive" class="img-responsive" /></center>
        </div>
    }
</div>


