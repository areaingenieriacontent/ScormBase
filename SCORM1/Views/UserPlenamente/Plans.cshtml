@using SCORM1.Models.MeasuringSystem
@model UserPlansViewModel
@{
    ViewBag.Title = "Plans";
}

<br /><br /><br /><br /><br /><br />
<div class="row fecha">
    <div class="btn-group btn-breadcrumb">
        <a href="@Url.Action("Index", "Home")" class="btn btn-info"><i class="glyphicon glyphicon-home"></i></a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-info">INICIO</a>

    </div>
</div>
<div class="jumbotron">

    <div class="titulo"><center><h3>PLANES DE MEJORAMIENTO ACTUALES DEL USUARIO</h3></center></div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="success">
                    <th>Plan</th>
                    <th>Competencia</th>
                    <th>Recurso</th>
                </tr>
            </thead>

            @if (Model.Plans.Count != 0)
            {
                <tbody>
                    @if (Model.Plans != null)
                    {
                        foreach (Plan plan in Model.Plans)
                        {
                            <tr>
                                <td>@plan.PlanDescription</td>
                                <td>@plan.Proficiency.ProficiencyDescription</td>


                                <td>
                                    @Html.ActionLink("Link", "GetFileEmail", "File", new { id = Model.userId + "-" + plan.ResourceId }, new { @class = "btn btn-primary", target = "_blank" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            }
            else
            {
                <img src="~/Content/Images/background-no-plan.jpg" style="width:50%;height:80%;" class="img-responsive" alt="Imagen responsive">
            }
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}