@using SCORM1.Models.PageCustomization
@using SCORM1.Models.ViewModel

@model AdminPageCustomizationViewModel

<br /><br /><br />
<script src="~/Scripts/Tinymce1/tinymce.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script>
        tinymce.init({
        selector: 'TextArea',
        init_instance_callback: function (editor) {
                editor.getBody().setAttribute('contenteditable', false);
        },
        theme: "modern",
        height: 200,
        menubar: false,
        extended_valid_elements: 'img[class=adaptar|!src|border:0|alt|title|width:100%|height:300px|style]',
        invalid_elements: 'strong,b,em,i,p,h1,h2,h3,h4,h5',
        plugins: [
            "image"
        ],
        toolbar: "image",
        connector: '@Model.baseUrl' + '/Upload/Index',

    });


</script>

<div class="jumbotron">


    @using (Html.BeginForm("UpdateOrCreationBanner", "AdminPageCustomization", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <form class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @for (int i = 0; i < 4; i++)
                {

                <h2> slide @i</h2>
                @Html.HiddenFor(model => model.Banners[i].Bann_Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Banners[i].Bann_Name, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Banners[i].Bann_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre del Tema" } })
                        @Html.ValidationMessageFor(model => model.Banners[i].Bann_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Banners[i].Bann_Description, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.Banners[i].Bann_Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Banners[i].Bann_Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Banners[i].Bann_Description, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.Banners[i].Bann_Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Banners[i].Bann_Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Banners[i].Bann_Link, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.Banners[i].Bann_Link, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Banners[i].Bann_Link, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Banners[i].Bann_Image, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.Banners[i].Bann_Image, new
                   {
                       htmlAttributes = new { @class = "form-control", @contenteditable = "false" }
                   })
                        @Html.ValidationMessageFor(model => model.Banners[i].Bann_Image, "", new { @class = "text-danger" })
                    </div>
                </div>

            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <center><button class="btn btn-primary" name="singin" type="submit">Actualizar banner</button></center>
                </div>
            </div>

        </form>
    }

</div>
