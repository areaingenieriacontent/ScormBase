@using SCORM1.Models.RigidCourse;
@using SCORM1.Models.ViewModel;
@model ProtectedFailureTestViewModel


@if (TempData["Add"] != null)
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        @TempData["Add"]
    </div>
}
else
{
    if (TempData["Info"] != null)
    {
        @section Scripts {
            <script type="text/JavaScript">
                $(document).ready(function () {
                    $("#Inform").modal();
                });
            </script>
        }}
}
@Scripts.Render("~/bundles/jqueryval")

@{
    ViewBag.Title = "Resultados Falla Protegída";
}

<br />
<div class="row fecha">
    <div class="btn-group btn-breadcrumb">
        <a href="@Url.Action("Index", "Home")" class="btn btn-info"><i class="glyphicon glyphicon-home"></i></a>
        <a href="@Url.Action("ListModuleVirtual", "User", new {id = Model.protectedFailureTest.Modu_Id})" class="btn btn-info">CURSOS</a>
    </div>
</div>
<br />
<h2>@Model.protectedFailureTest.Module.Modu_Name</h2>
<hr style="border:1px solid #ff0000;" />
<br />
<br />

@if (Model.resultList.Count > 0)
{
    for (int i = 0; i < Model.resultList.Count; i++)
    {
        <hr style="border:1px solid #ff6a00;" />
        <div class="fecha">
            <p>Tema al que pertenece: @Model.resultList[i].Category.Cate_Name</p><br />
            <p>Categoría: @Model.resultList[i].Category.Cate_Name</p><br />
            <p>Descripción: @Model.resultList[i].Category.Cate_Desc</p><br />
            <p>Respuestas correctas: @Model.resultList[i].correctAnswersQuantity</p>
            <p>Porcentaje completado: @Model.resultList[i].Score</p>
        </div>
        <hr style="border:1px solid #ff6a00;" />
    }
}
<div>
    <a href="@Url.Action("Grades", "User", new {id = Model.protectedFailureTest.Modu_Id})" class="btn btn-default">Ir al curso</a>
</div>
<br />
<br />
<br />