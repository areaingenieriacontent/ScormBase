                                            <td>@User.codigo_area</td>
                                            <td>@User.área</td>
                                            <td>@User.codigo_cargo</td>
                                            <td>@User.cargo</td>
                                            <td>@User.codigo_ciudad</td>
                                            <td>@User.ciudad</td>
                                            <td>@User.codigo_ubicación</td>
                                            <td>@User.ubicación</td>
                                            <td></td>
                                        </tr>
                                    }
