                                </div>
                                <div class="col-md-12" style="margin-left: -100px">
                                    <br />
                                    <br />
                                    <p> @Html.DisplayFor(model => model.cliente.firstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombres" } })</p>
