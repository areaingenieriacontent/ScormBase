@model SCORM1.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
<style>
    :root{
        --color-BarraSup: @Model.ColorBarraSup;
        --color-Iconos: @Model.ColorIconos;
        --color-Textos: @Model.ColorTextos;
        --color-Boton: @Model.ColorBoton;
        --color-Textbtn: @Model.ColorTextBtn;
        --color-Menu: @Model.ColorMenu;
        --color-TextMenu: @Model.ColorTextMenu;
		}
    body {
        background: url(@Model.UrlImage2);
        margin-top: 5%;
        margin-left: 35%;
    }
</style>
<br /><br /><br />
<div class="col-md-3"></div>
<div class="col-md-6" style="background-color: rgba(10, 10, 10, 0.74);border: solid 5px #008591; padding:20px">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "", role = "form", @style = "align:'center'" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <a href="@Url.Action("Index", "Home")" style="background-color:rgba(0, 0, 0, 0);"><img src="@Model.UrlLogo" alt="Alternate Text" style=" width: 300px; height: 120px; padding-left: 3%;  margin-left: 24%; margin-top: 2%;" /></a>
            <br /><br /><br />
            <center><h4 style="color: white;">Ingrese su nombre de usuario o su correo electrónico</h4></center>
            <br /><br />
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-12" align="center" id="form-forgot">
                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Usuario", @class = "form-forgot", @Style = "border-color:#ffffff !important" })
            </div>
        </div>
        <br /><br />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(m => m.UserMail, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-12" align="center" id="form-forgot">
                @Html.TextBoxFor(m => m.UserMail, new { @placeholder = "Correo Electrónico", @class = "form-forgot", @Style ="border-color:#ffffff !important" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12" align="center" id="send-forgot">
                <input type="submit" class="btn btn-default" style="margin:5%; border-color:#008591 !important; color:#008591 !important; " value="Enviar" />
                @*<input type="button" value="Votar" onClick="this.disabled=true">*@

            </div>
        </div>




        if (TempData["Menssages"] != null)
        {
            @section Scripts {
                <script type="text/JavaScript">
                    $(document).ready(function () {
                        $("#Menssages").modal();
                    });
                </script>
            }}

        <div id="Menssages" class="modal fade mensaje" role="dialog">
            <div class="modal-dialog1">
                <div class="modal-content">
                    <div class="mensajito">
                        <h1>
                            @TempData["Menssages"]
                        </h1>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>



    }
</div>


