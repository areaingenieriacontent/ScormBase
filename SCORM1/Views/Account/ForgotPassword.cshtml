@model SCORM1.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
<style>
    body {
        background: url(../Resources/20170801143148-estados.png);
    }
</style>
<br /><br /><br />
<div class="col-md-3"></div>
<div class="col-md-6" style="background-color: rgba(176, 0, 45, 0.4);border: solid 5px #B0002D; padding:20px">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "", role = "form", @style = "align:'center'" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <a href="@Url.Action("Index", "Home")" style="background-color:rgba(0, 0, 0, 0);"><img src="~/Content/Images/logosan2.png" alt="Alternate Text" style="width:300px; height:80px;" /></a>
            <br /><br /><br />
            <h4 style="color: white;">Ingrese su nombre de usuario o su correo electrónico</h4>
            <br /><br />
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-12" align="center" id="form-forgot">
                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Usuario", @class = "form-forgot" })
            </div>
        </div>
        <br /><br />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(m => m.UserMail, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-12" align="center" id="form-forgot">
                @Html.TextBoxFor(m => m.UserMail, new { @placeholder = "Correo Electrónico", @class = "form-forgot" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12" align="center" id="send-forgot">
                <input type="submit" class="btn btn-default" value="Enviar" />
                @*<input type="button" value="Votar" onClick="this.disabled=true">*@

            </div>
        </div>




        if (TempData["Menssages"] != null)
        {
            @section Scripts {
                <script type="text/JavaScript">
                    $(document).ready(function () {
                        $("#Menssages").modal();
                    });
                </script>
            }}

        <div id="Menssages" class="modal fade mensaje" role="dialog">
            <div class="modal-dialog1">
                <div class="modal-content">
                    <div class="mensajito">
                        <h1>
                            @TempData["Menssages"]
                        </h1>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>



    }
</div>


