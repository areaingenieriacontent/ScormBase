<div class="jumbotron col-md-12">
    <h1 class="title">ADMINISTRADOR DE PUNTOS POR CATEGORIAS</h1>
    @Scripts.Render("~/bundles/jqueryval")
    @if (TempData["UpdatePointManagerCategory"] != null)
    {
        @section Scripts {
            <script type="text/JavaScript">
                $(document).ready(function () {
                    $("#FormUpdatePointManagerCategory").modal();
                });
            </script>
        }}
    @using (Html.BeginForm("UpdatePointManagerCategory", "AdminPointManagerCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade" id="FormUpdatePointManagerCategory" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title"><strong>MODIFICAR PUNTOS</strong></h2>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            @Html.HiddenFor(model => model.PoMaCa_Id)
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.PoMaCa_Periodical, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.PoMaCa_Periodical, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                                @Html.ValidationMessageFor(model => model.PoMaCa_Periodical, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.PoMaCa_course, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.PoMaCa_course, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                                @Html.ValidationMessageFor(model => model.PoMaCa_course, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.PoMaCa_Improvements, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.PoMaCa_Improvements, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                                @Html.ValidationMessageFor(model => model.PoMaCa_Improvements, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12">
                                <br />
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <center><button class="btn btn-primary" name="singin" type="submit">Modifica Puntos</button></center>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>


    }

    @using (Html.BeginForm("AddPointManagerCategory", "AdminPointManagerCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade" id="AddCategoryModule" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title"><strong>ASIGNAR PUNTOS</strong></h2>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.PoMaCa_Periodical, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.PoMaCa_Periodical, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                                @Html.ValidationMessageFor(model => model.PoMaCa_Periodical, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.PoMaCa_course, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.PoMaCa_course, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
