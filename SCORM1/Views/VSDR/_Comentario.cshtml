@using SCORM1.Models.VSDR;
@using SCORM1.Models.ViewModel;
@model VsdrUserVM

@using (Html.BeginForm("ComentTeacher", "VSDR", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div id="AddComent" class="modal fade" role="dialog">
        <div class="modal-dialog1">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#FC3650">
                    <h4 class="modal-title" style="font-weight:bolder;font-size:30px;text-align:center;color:white;">COMENTARIO DEL DOCENTE </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("ComentTeacher", "VSDR", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {

                        @Html.AntiForgeryToken()
                        <div class="row">
                            <br />
                            <div class="col-md-6">
                                @Html.HiddenFor(model => model.actualVsdr.id)
                                @Html.HiddenFor(model => model.actualVsdr.name)
                                @Html.HiddenFor(model => model.userId)
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.VsdrTeacherComment.content, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextAreaFor(model => model.VsdrTeacherComment.content, new { htmlAttributes = new { @class = "form-control", style = "min-heigth:300px;min-width:95%" } })
                                @Html.ValidationMessageFor(model => model.VsdrTeacherComment.content, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div class="modal-footer">
                            <div class="row justify-content-center">
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <input type="submit" class="btn btn-modal" Value="Crear" />
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <button type="button" class="btn btn-modal" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>

                    }
                </div>


            </div>
        </div>
    </div>
}