@using SCORM1.Models.ViewModel
@model   AdminTrainingProfileViewModel

<div class="panel-primary">

    <br /><br /><br />
    <h1 class="title">MÓDULO DESICIONES DE VIDA</h1>
    <!--Primera sección de texto del módulo introductorio-->
    <embed src="/TermsandConditions/@Model.FileTerms" width="800" height="375">
    @using (Html.BeginForm("Validatevideos", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {<!--Sección para añadir vista de un curso-->
        @Html.AntiForgeryToken()
        <h1 class="title">CONTENIDO</h1>
        <div class="col-md-2">
            <img src="~/Content/Images/tecnologia.png" style="width:100px; height:100px" class="img-responsive" />
        </div>
            <div class="col-md-10">
                <p style="color:#888888; font-size:30px;width:100%;text-align:left;"></p>
            </div>
            <!--Menú Dinámico Temporal para vista de Módulo introductorio-->
            <div>
                <div class="col-md-12"> <br /></div>
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#menu1" style="font-size:20px;">ACERCAMIENTO 1</a></li>
                    <li><a data-toggle="tab" href="#menu2" style="font-size:20px;">ACERCAMIENTO 2</a></li>
                    <li><a data-toggle="tab" href="#menu3" style="font-size:20px;">SENSIBILIDAD 1</a></li>
                    <li><a data-toggle="tab" href="#menu4" style="font-size:20px;">SENSIBILIDAD 2</a></li>
                </ul>
                <br />
                <div class="tab-content">
                    <div id="menu1" class="tab-pane fade in active">
                        <img src="~/Content/Images/titulo-1.jpg" alt="Alternate Text" />
                    </div>
                    <div id="menu2" class="tab-pane fade">
                        <img src="~/Content/Images/titulo-2.jpg" alt="Alternate Text" />
                    </div>
                    <div id="menu3" class="tab-pane fade">
                        <img src="~/Content/Images/titulo-3.jpg" alt="Alternate Text" />
                    </div>
                    <div id="menu4" class="tab-pane fade">
                        <h3>Unidad Tres</h3>
                    </div>
                </div>
            </div>
            <!--Fin manú dinpamico-->
            <br />
            <br /><br />
            <div class="col-md-offset-2 col-md-8">
                <br /><br /><br />
                @Html.HiddenFor(model => model.videos, new { Value = true })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <br /><br />
                    <center><button class="btn btn-primary" name="singin" type="submit">Continuar</button></center>
                </div>
            </div>
    }
</div>


