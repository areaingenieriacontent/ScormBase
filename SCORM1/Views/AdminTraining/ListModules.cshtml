@using SCORM1.Models.ViewModel;
@using SCORM1.Models.Lms;
@model AdminTrainingModuleViewModel
@Html.Partial("_LoginSuperAdmin")
@{
    ViewBag.Title = "ListModules";
}

<br />
<br />
<br />
<div class="container">
    <div>
        <br /> <br />
        @foreach (Module detalles in Model.ListModules)
        {
            <div class="thumbnail col-md-4">
                <img src="~/Resources/@detalles.Modu_ImageName" style="width:300px; height:300px" />
                <div class="caption">

                    <p>
                        @using (Html.BeginForm("Detalles", "Admin", FormMethod.Post, new { id = "detallesForm" }))
                        {
                            <center><input type="submit" formaction="/Admin/Detalles/@detalles.Modu_Id" class="btn btn-primary" value="VER MAS " /></center>
                        }

                    </p>
                </div>
            </div>
        }
    </div>
</div>