                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ToCo_FinishDate, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-2 control-label">
                        @Html.DisplayFor(model => detalles.ToCo_FinishDate, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.modules, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-2 control-label">
                        @Html.DisplayFor(model => detalles.Module.Modu_Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ToCo_Content, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg9 control-label">
                        @Html.Raw(detalles.ToCo_Content)
                    </div>
                </div>
            </div>
        </div>
    }
</div>





