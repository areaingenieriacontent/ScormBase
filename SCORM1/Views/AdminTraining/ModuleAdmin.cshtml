@using SCORM1.Models.ViewModel;
@using SCORM1.Models.Lms;
@model AdminModuleViewModel
@Html.Partial("_LoginSuperAdmin")
<br />
<br />
<br />
<br />
<br />
<br />
<div class="row fecha">
    <div class="btn-group btn-breadcrumb">
        <a href="@Url.Action("Index", "Home")" class="btn btn-info"><i class="glyphicon glyphicon-home"></i></a>
    </div>
</div>
<br />
<div class="jumbotron col-md-12">
    <br><hr style="width:100%; float:left; border:dashed; border-color: #A3DC68; border-width:thin;">
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="success">
                    <th><center>Nombre del Curso</center></th>
                    <th>Descripción</th>
                    <th>Tipo</th>
                    <th>Estado</th>
                    <th>Fecha de Incio</th>
                    <th>Vigencia</th>
                    <th>Portada</th>
                    <th>Ingresar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var modules in Model.listenrrolment)
                {
                    <tr>
                        <td>@modules.Module.Modu_Name</td>
                        <td><div style='width:60px;height:20px; overflow:hidden;'>@modules.Module.Modu_Description</div></td>
                        <td>@modules.Module.Modu_TypeOfModule</td>
                        <td>@modules.Module.Modu_Statemodule</td>
                        <td>@modules.Module.Modu_InitDate</td>
                        <td>@modules.Module.Modu_Validity @modules.Module.Modu_Period</td>
                        <td>
                            <img src="~/Resources/@modules.Module.Modu_ImageName" style="width:50px; height:50px" />
                        </td>
                        <td>
                            @Html.ActionLink("Ingresar", "UserEnrollment", "AdminTraining", new { id = @modules.Module.Modu_Id }, new { @class = "btn btn-primary btn-responsive" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
