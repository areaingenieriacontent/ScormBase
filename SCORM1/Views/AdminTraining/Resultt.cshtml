@using SCORM1.Models.ViewModel
@using SCORM1.Models
@using PagedList.Mvc;
@Html.Partial("_LoginSuperAdmin")
<br />
<br />
<br />
@model RatingUserViewJobs

@if (TempData["Menssage"] != null)
{
    @section Scripts {
        <script type="text/JavaScript">
            $(document).ready(function () {
                $("#Menssages").modal();
            });
        </script>
    }}
@if (TempData["Edit"] != null)
{
    @section Scripts {
        <script type="text/JavaScript">
            $(document).ready(function () {
                $("#UpdateBook").modal();
            });
        </script>
    }}



@if (TempData["Result"] != null)
{
    @section Scripts {
        <script type="text/JavaScript">
            $(document).ready(function () {
                $("#Result").modal();
            });
        </script>
    }}
<div class="panel-primary">


    <br /><br /><br /><br />
    <div class="row fecha">
        <div class="btn-group btn-breadcrumb">
            <a href="@Url.Action("Index", "Home")" class="btn btn-info"><i class="glyphicon glyphicon-home"></i></a>
        </div>
    </div>
    <br />

    <tr>
        <td><hr /></td>

    </tr>

    <br>
    <tr>
        <td><hr /></td>



        @foreach (var item in Model.ApplicationUser)
        {
            <td><h3>Calificaciones Estudiante: @item.FirstName @item.LastName</h3></td>



        }



    </tr>
    <hr style="width:100%; float:left; border:dashed; border-color: #A3DC68; border-width:thin;">
    <div class="table-responsive col-md-12 col-sm-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="success">
                    <th><center>Recurso</center></th>
                    <th><center>Calificación</center></th>
                    <th><center>Retroalimentación</center></th>
                    <th><center>Estado</center></th>
                    <th><center>Fecha Calificación</center></th>

                </tr>
            </thead>
            <tbody>
                @*@foreach (var modules in Model.listenrrolment)
                    {

                    @modules.ApplicationUser.FirstName @modules.ApplicationUser.LastName
                    }*@

                @foreach (var item in Model.listresultado.OrderBy(x => x.Nombre))
                {
                    <tr>
                        <td>
                            <center><b>   @item.Nombre</b></center>
                        </td>
                        <td>
                            <center><b>@item.BoRa_Score</b></center>
                        </td>
                        <td>
                            @item.BoRa_Description
                        </td>
                        <td>
                            <center><b> @item.BoRa_StateScore</b></center>
                        </td>
                        <td>
                            <center><b>  @item.BoRa_InitDate</b></center>
                        </td>





                    </tr>
                }
                <tr>
                    <td><hr /></td>
                    <td><center><h3>Lista de cuestionarios</h3></center></td>

                </tr>

            <thead>
                <tr class="success">
                    <th><center>Test</center></th>
                    <th><center>Calificación</center></th>
                    <th>Fecha Presentación</th>
                    <th>Estado</th>


                </tr>
            </thead>
            @foreach (var item in Model.listTestUs)
            {
                /*   .OrderByDescending(x => x.Nombre)*/
                <tr>
                    <td>
                        <center><b>@item.Nombre</b></center>
                    </td>
                    <td>
                        <center><b>@item.BoRa_Score</b></center>
                    </td>
                    <td>
                        @item.BoRa_InitDate
                    </td>
                    <td>
                        <center><b>  @item.BoRa_StateScore</b></center>
                    </td>


                </tr>

            }
            </tr>
            <tr>
                <td><hr /></td>
                <td><h3>Calificar o Editar Nota</h3></td>

            </tr>
            <thead>
                <tr class="success">
                    <th><center><b>Unidades</b></center></th>
                    <th><center><b>Calificar O Editar Nota de  Trabajos</b></center></th>
                    <th><center><b>Calificar O Editar Nota de Foros</b></center></th>

                </tr>
            </thead>
            @foreach (var item in Model.listjobs)
            {
                <tr>
                    <td>
                        <center><b>@item.Job_Name</b></center>


                    </td>

                    <td>
                        <center><a href="@Url.Action("ScoreT", "Ratings", new {id=item.Job_Id })" class="btn btn-info"> TRABAJOS</a></center>
                    </td>

                    <td>
                        <center>  <a href="@Url.Action("ScoreF", "Ratings", new {id=item.Job_Id })" class="btn btn-info"> FORO</a></center>

                    </td>


                </tr>

            }
            </tbody>
        </table>
    </div>
</div>
